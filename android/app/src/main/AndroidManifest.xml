<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quotesapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <service
            android:name=".services.Category"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />

        <service
            android:name=".services.Book"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />

        <service
            android:name=".services.Chapter"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />

        <service
            android:name=".services.Quote"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />

        <receiver
            android:name=".listeners.CategoryListener"
            android:process=":remote">
            <intent-filter>
                <action android:name="GET_CATEGORIES" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".listeners.BookListener"
            android:process=":remote">
            <intent-filter>
                <action android:name="GET_BOOKS" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".listeners.ChapterListener"
            android:process=":remote">
            <intent-filter>
                <action android:name="GET_CHAPTERS" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".listeners.QuoteListener"
            android:process=":remote">
            <intent-filter>
                <action android:name="GET_QUOTES" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
    </application>

</manifest>
